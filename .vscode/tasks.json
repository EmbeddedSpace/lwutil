{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "Build project",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\lwutil.c",
                "${workspaceFolder}\\dev\\VisualStudio\\main.c",
                "-I${workspaceFolder}\\",
                "-o",
                "${workspaceFolder}\\Debug\\output.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Run built code",
            "command": "${workspaceFolder}\\Debug\\output.exe",
            "problemMatcher": [],
            "dependsOn": [
                "Build project"
            ]
        }
    ]
}